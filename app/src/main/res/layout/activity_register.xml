<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundIjoMuda"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="30dp"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="30dp"
                  android:gravity="center_horizontal"
                  android:background="@drawable/radius">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R E G I S T E R"
                android:textColor="#fff"
                android:textSize="45dp"
                android:layout_marginBottom="20dp"
        />
        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/iconlogin"
                android:layout_marginBottom="70dp"
        />

        <EditText
                android:id="@+id/et_email_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your email in here"
                android:textColorHint="#fff"
                android:layout_marginBottom="20dp"
                android:inputType="textEmailAddress"
        />
        <EditText
                android:id="@+id/et_password_register"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:hint="Type your password in here"
                android:textColorHint="#fff"
                android:layout_marginBottom="20dp"
        />
        <Button
                android:id="@+id/registerbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="REGISTER"
                android:background="#fff"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
        />
        <TextView
                android:id="@+id/back_to_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun ? Klik untuk kembali "
                android:textColor="#000"
        />
    </LinearLayout>


</RelativeLayout>